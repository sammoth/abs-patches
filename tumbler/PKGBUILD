pkgname=tumbler
pkgver=0.2.99
pkgrel=1
pkgdesc="D-Bus service for applications to request thumbnails"
arch=('i686' 'x86_64')
url="http://www.xfce.org/"
license=('GPL2' 'LGPL')
groups=('xfce4' 'modified')
depends=('gdk-pixbuf2')
makedepends=('intltool' 'python' 'ffmpegthumbnailer' 'poppler-glib' 'libgsf'
             'libopenraw' 'freetype2')
optdepends=('ffmpegthumbnailer: for video thumbnails'
            'poppler-glib: for PDF thumbnails'
            'libgsf: for ODF thumbnails'
            'libopenraw: for RAW thumbnails'
            'freetype2: for font thumbnails')
source=("git+https://github.com/sammoth/tumbler.git#branch=lodpi")
sha256sums=('SKIP')

prepare(){
  cd "${srcdir}/${pkgname}"
  patch -Np1 -i "${srcdir}/../noexif.patch"
}

build() {
  cd "$srcdir/$pkgname"
  ls

  ./autogen.sh \
    --prefix=/usr \
    --sysconfdir=/etc \
    --libexecdir=/usr/lib/xfce4 \
    --disable-static \
    --disable-debug \
    --disable-gstreamer-thumbnailer \
    --disable-cover-thumbnailer \
    --disable-jpeg-thumbnailer
    # sammoth : above: this stops exif thumbs being used
  make
}

package() {
  cd "$srcdir/$pkgname"
  make DESTDIR="$pkgdir" install
}

